<script>
    //首次加载
    $(function () {
        btnsel();
        showpage();
    });
    
    function btnsel()
    {
        //供货商名称
        var gname = $("#texNmae").val();
        //时间
        var times = $("#texTime").val();
        //状态
        var tates = $("#stateid").val();
        //当前第几页
        var indes = $("#pageindex").text();
        //每页多少条
        var sizes = $("#pagesize").text();

       


        $.ajax({
            url: "https://localhost:44300/api/Purchase/ShowAllInfo?gname=" + gname + "&&time=" + times + "&&state=" + tates + "&&pageIndex=" + indes + "&&pageSize=" + sizes,
            type: "get",
            dataType:"json",
            success: function (data)
            {
                $("#totalCount").text(data.toTalCount);
                $("#totalPage").text(data.pageTotal);
                $("#tab1").empty();
                $(data.showList).each(function ()
                {
                  var   str = '<tr>' +
                        '<td>' + this.receIptsId + '</td>' +
                        '<td>' + this.datetime + '</td>' +
                        '<td>' + this.receIptsCode + '</td>' +
                        '<td>' + this.gname + '</td>' +
                      '<td>' + this.cMoney + '</td>' +
                      '<td>' + (this.cMoney - this.discount)+ '</td>' +
                        '<td>' + (this.payMent==1?"已付款":"未付款")+ '</td>' +
                        '<td><a href="javascript:updateInfo(' + this.receIptsId + ')">编辑</a> <a href="javascript:deleteInfo(' + this.receIptsId + ')">删除</a> </td>'


                        + '</tr>';
                    $("#tab1").append(str);

                })
            }


        })

    }

    //分页
    function showpage(name)
    {
        //当前第几页
        var index = Number($("#pageindex").text());
        //每页多少条
        //var size = Number($("#pagesize").text());
        ////总条数
        //var tatal = Number($("#totalCount").text());
        //总页数
        var pagetatal = Number($("#totalPage").text());
        
        switch (name) {

            case 'first':
                index= 1
                break;
            case 'prv':
                if (index > 1) {
                    index--;
                }
                else
                {
                    $("#pageindex").text(1);

                }

                break;
            case 'next':

                if (index < pagetatal) {
                    index++;
                }
                else {

                    $("#pageindex").text(pagetatal);

                }

                break;
            case 'last':

                index = pagetatal;
                break;
            default:
                break;

                
        }
        $("#pageindex").text(index);
        btnsel();

    };
    //新增采购
    function btnAdd()
    {
        location.href = "/PurchaseInfo/AddPurchas";

    }
