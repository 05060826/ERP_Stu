                <td>单据编号</td>
                <td>供应商</td>
                <td>购货金额</td>
                <td>已付款</td>
                <td>付款状态</td>
                <td>操作</td>
            </tr>
            <tbody id="tab1">

            </tbody>
        </table>
        <div>
            <input id="Button1" type="button" value="首页" onclick="showpage('first')" />
            <input id="Button1" type="button" value="上一页" onclick="showpage('prv')"  />
            当前第<label id="pageindex">1</label>页/总共<label id="totalPage"></label>页
            /每页<label id="pagesize">2</label>条/总共<label id="totalCount"></label>条


            <input id="Button1" type="button" value="下一页" onclick="showpage('next')"  />
            <input id="Button1" type="button" value="尾页"  onclick="showpage('last')" />


        </div>
    </div>

</body>
