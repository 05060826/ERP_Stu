<script src="~/lib/jquery/dist/jquery.js"></script>


<script>
    $(function () {
        ShowList();
    });
    function ShowList() {
        var code = $("#Num").val();
        var WName = $("#Cname").val()
        var Ename = $("#Rname").val()
        $.ajax({
            
            url: "https://localhost:44300/api/Allot/ShowPageAllot?AllotCode=" + code + "&&WName=" + WName + "&&Ename=" + Ename,
            type: "get",
            dataType: "json",
            success: function (data) {

                $("#tab1").empty();
                $(data).each(function () {
                    var str = '<tr>' +
                        '<td>' + this.aTime + '</td>' +
                        '<td>' + this.allotCode + '</td>' +
                        '<td>' + this.sName + '</td>' +
                        '<td>' + this.number + '</td>' +
                        '<td>' + this.units + '</td>' +
                        '<td>' + this.wName + '</td>' +
                        '<td>' + this.ename + '</td>' +
                        '<td><a href="javascript:updateInfo(' + this.allotId + ')">编辑</a> <a href="javascript:deleteInfo(' + this.allotId + ')">删除</a> </td>'
                        + '</tr>';
                    $("#tab1").append(str);

                })
            }


        })

    }

