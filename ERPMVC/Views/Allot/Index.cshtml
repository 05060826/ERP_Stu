<script>

    function ShowList() {
        var code = $("#Num").val();
        var WName = parseInt($("#Cname").val());
        var Ename = parseInt($("#Rname").val());
        $.ajax({
            url: "https://localhost:44300/api/ShowPageAllot?AllotCode=" + code + "&WName=" + WName + "&Ename=" + Ename,
            type: "get",
            dataType: "json",
            success: function (data) {
                $("#tab1").empty();
                $(data).each(function () {
                    var str = '<tr>' +
                        '<td>' + this.ATime + '</td>' +
                        '<td>' + this.AllotCode + '</td>' +
                        '<td>' + this.SName + '</td>' +
                        '<td>' + this.Number + '</td>' +
                        '<td>' + this.Units + '</td>' +
                        '<td>' + this.WName + '</td>' +
                        '<td>' + this.Ename + '</td>' +
                        '<td><a href="javascript:updateInfo(' + this.AllotId + ')">编辑</a> <a href="javascript:deleteInfo(' + this.AllotId + ')">删除</a> </td>'
                        + '</tr>';
                    $("#tab1").append(str);

                })
            }


        })

    }

